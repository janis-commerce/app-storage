{
	"name": "@janiscommerce/app-storage",
	"version": "1.0.0",
	"description": "App Storage",
	"main": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui --coverage",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint . --ext .js,.ts,.cjs",
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build",
		"docs": "npm run build && jsdoc2md --template .README-template.md --files dist/index.js > README.md"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/janis-commerce/app-storage.git"
	},
	"keywords": [
		"janiscommerce",
		"app",
		"storage"
	],
	"author": "Janis Commerce",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/janis-commerce/app-storage/issues"
	},
	"homepage": "https://github.com/janis-commerce/app-storage#readme",
	"peerDependencies": {
		"react": ">=17.0.2 <19.0.0",
		"react-native": ">=0.67.5 <0.75.0",
		"react-native-mmkv": "^2.12.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"@vitest/coverage-v8": "^0.34.6",
		"@vitest/ui": "^0.34.6",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"jsdoc-to-markdown": "^9.1.3",
		"prettier": "^3.2.5",
		"typescript": "^5.9.2",
		"vitest": "^0.34.6"
	}
}
